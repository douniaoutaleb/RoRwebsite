<%= form_for @cour , :html => {:class => 'form-horizontal'} do |f| %>
  <% if @cour.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@cour.errors.count, "error") %> prohibited this cour from being saved:</h2>

      <ul>
      <% @cour.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :nom , class: "col-sm-2 control-label"%>
    <%= f.text_field :nom ,class: 'col-md-2 col-sm-offset-0'%>
  </div>
  <div class="form-group">
    <%= f.label :institution , class: "col-sm-2 control-label"%>
    <%= f.text_field :institution,class: 'col-md-3 col-sm-offset-0' %>
  </div>

 
      <div class="form-group">
      <%= f.label :theme , class: "col-sm-2 control-label"%>
     <%= f.select(:theme, [ 'Intelligence Artificielle', 'Cryptographie', 'Analyse et statistique des données',"Sécurité des systèmes d'information " ], {}, { :class => 'col-md-3 col-sm-offset-0' }) %>
      </div>

  <div class="form-group">
    <%= f.label :langue , class: "col-sm-2 control-label"%>
    <%= f.text_field :langue,class: 'col-md-3 col-sm-offset-0' %>
  </div>
  <div class="form-group">
    <%= f.label :professeur , class: "col-sm-2 control-label"%>
    <%= f.select(:professeur, @prof, {}, { :class => 'col-md-3 col-sm-offset-0' })  %>
  </div>
  <div class="form-group">
    <%= f.label :description , class: "col-sm-2 control-label"%>
    <%= f.text_area :description ,class: 'col-md-3 col-sm-offset-0'%>
  </div>
  <br/>
  <div class="actions" style="margin-left: 40%;margin-bottom: 2%;">
    <%= f.submit 'Sauvegarder', :class => "btn btn-default btn-outline "%>
    <%= link_to 'Retour', cours_path ,:class => "btn btn-default btn-outline "%>
  </div>
<% end %>
