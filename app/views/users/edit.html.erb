
     
<% provide(:title, 'Edit') %>
      <div id="legend">
        <legend class=""><h1 style="color: #8b8b8b;">Modifier les param√®tres du profil</h1></legend>
      </div>

<div class="row">
    <%= form_for @user, :html => {:class => 'form-horizontal'}  do |f| %>
    <%= render 'shared/error_messages' %>
    
    <% if @user.user_type == "E" %>
    <div class="form-group">
      <%= f.label(:user_e, "Etudiant", class: "col-sm-2 control-label")%> <%= f.radio_button(:user_type, "E", checked: "checked") %>  
    </div>
      <%else%>
    <div class="form-group">
      <%= f.label(:user_e, "Professeur", class: "col-sm-2 control-label")%> <%= f.radio_button(:user_type, "P", checked: "checked") %>  
    </div>
    <%end%>

      

    <div class="form-group">
      <%= f.label :nom ,  class: "col-sm-2 control-label"%>
       <%= f.text_field :nom,class: 'col-md-2 col-sm-offset-0' %>
       </div>

    <div class="form-group">
        <%= f.label :prenom ,  class: "col-sm-2 control-label"%>
      <%= f.text_field :prenom,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="form-group">
       <%= f.label :etablissement ,  class: "col-sm-2 control-label"%>
      <%= f.text_field :etablissement,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="form-group">
        <%= f.label :identifiant ,  class: "col-sm-2 control-label"%>
      <%= f.text_field :identifiant,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="form-group">
       <%= f.label :date,  class: "col-sm-2 control-label" %>
      <%= f.text_field :date,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="form-group">
      <%= f.label :email ,  class: "col-sm-2 control-label"%>
      <%= f.email_field :email,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="form-group">
      <%= f.label :password ,  class: "col-sm-2 control-label"%>
       <%= f.password_field :password,class: 'col-md-2 col-sm-offset-0' %>
       </div>

    <div class="form-group">
      <%= f.label :password_confirmation, "Password Confirmation" ,  class: "col-sm-2 control-label"%>
      <%= f.password_field :password_confirmation,class: 'col-md-2 col-sm-offset-0' %>
      </div>

    <div class="actions" style="margin-left: 40%;margin-bottom: 2%;">
      <%= f.submit "Sauvegarder", class: "btn btn-primary" %>
    </div>
    <% end %>

</div>
