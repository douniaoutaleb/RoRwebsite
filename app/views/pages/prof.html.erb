
<div id="legend">
  <legend class=""><h1 style="margin-left:4%;color: #8b8b8b;">Liste Cours</h1></legend>
</div>

      <div class="services" style="padding:0px!important;">
        <div class="container text-center">
          <div class="row">
          <% @cours_prof.each do |cour| %>
            <div class="col-xs-4" >
               <%= image_tag "computer_science.jpg" %>
              <h3><%= cour.nom %></h3>
              <p> 
                  <%= cour.theme %>
              </p>
              <div class="row">
                <%= link_to 'En savoir plus', cour, :class => " btn btn-warning btn-md pull-right bttn" %>
                 <%= link_to 'Supprimer', cour, method: :delete, data: { confirm: 'Are you sure?' }, :class => " btn btn-warning btn-md pull-right bttn" %>
                 <%= link_to 'Edit', edit_cour_path(cour), :class => "btn btn-warning btn-md pull-right bttn " %> 
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
      

<div  class="col-xs-2">
  <%= link_to 'Ajouter un cours', new_cour_path, :class => " btn btn-success btn-outlin pull-right bttn" %>
  
</div>

